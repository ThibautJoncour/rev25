@page "/LoanSchedule"
@inherits LoanScheduleBase

<PageTitle>Loan Schedule</PageTitle>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Loan Schedule Calculator</h2>

    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Notional</label>
            <input type="number" class="form-control" @bind="Notional" placeholder="Enter amount" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Start Date</label>
            <input type="date" class="form-control" @bind="StartDate" />
        </div>
        <div class="col-md-4">
            <label class="form-label">End Date</label>
            <input type="date" class="form-control" @bind="EndDate" />
        </div>
    </div>

    <div class="row g-3 mt-2">
        <div class="col-md-4">
            <label class="form-label">Roll Day</label>
            <input type="number" class="form-control" @bind="RollDay" min="1" max="31" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Basis Calculation</label>
            <select class="form-select" @bind="BasisCalcul">
                <option value="360">360/360</option>
                <option value="252">252</option>
                <option value="365">Exact/Exact</option>
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Business Day Convention</label>
            <select class="form-select" @bind="BDC">
                <option value="Modified Following">Modified Following</option>
                <option value="Following">Following</option>
            </select>
        </div>
    </div>

    <div class="text-center mt-4">
        <button class="btn btn-primary" @onclick="GenerateSchedule">Generate Schedule</button>
    </div>

    @if (ScheduleList.Any())
    {
            <div class="table-responsive mt-4">
                <table class="table table-striped table-hover">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Amount (€)</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in ScheduleList)
                    {
                                <tr class="text-center">
                                    <td>@item["Start Date"]</td>
                                    <td>@item["End Date"]</td>
                                    <td>@item["Amount"] €</td>
                                    <td>@item["Status"]</td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
</div>
